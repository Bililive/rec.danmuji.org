            <ui:SimpleStackPanel Margin="5" Spacing="5">
              <Button Command="{x:Static m:Commands.OpenLink}" CommandParameter="https://rec.danmuji.org/update/v1-1-24/">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
